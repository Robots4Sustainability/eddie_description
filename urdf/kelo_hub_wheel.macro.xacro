<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="kelo_hub_wheel">

    <xacro:macro name="kelo_hub_wheel" params="wheel_prefix struct_prefix wheel_origin_xyz wheel_orientation_rpy">

        <!-- Properties -->
        <xacro:property name="mesh_package" value="eddie_description"/>
        <xacro:property name="wheel_mesh_file" value="hub_wheel.stl"/>

        <!-- Links -->
        <link name="${struct_prefix}${wheel_prefix}link">
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <geometry>
                    <mesh filename="package://${mesh_package}/meshes/${wheel_mesh_file}" />
                </geometry>
                <material name="black">
                    <color rgba="0 0 0 1.0"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://${mesh_package}/meshes/${wheel_mesh_file}"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="1.563"/>
                <origin rpy="0 0 0" xyz="0 0.00003 -0.00044" />
                <inertia ixx="0.001012837" ixy="0" ixz="0" iyy="0.001013130" iyz="0" izz="0.001579986"/>
            </inertial>                     
        </link>

        <!-- Joints -->
        <joint name="${struct_prefix}${wheel_prefix}joint" type="continuous">
            <parent link="${struct_prefix}struct_link"/>
            <child link="${struct_prefix}${wheel_prefix}link"/>
            <origin xyz="${wheel_origin_xyz}" rpy="${wheel_orientation_rpy}"/>
            <axis xyz="0 0 1"/>
        </joint>
        
    </xacro:macro>
</robot>

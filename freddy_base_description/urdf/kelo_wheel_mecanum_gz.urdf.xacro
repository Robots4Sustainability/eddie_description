<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="wheel_radius" value="0.05" />
    <xacro:property name="wheel_mass" value="1.0" />
    <xacro:property name="inertia_wheels" value="0.001" />

    <xacro:include filename="$(find freddy_base_description)/urdf/common.xacro" />

    <xacro:macro name="kelo_wheel" params="name parent *origin fdir1">
        <link name="${name}_link">
            <visual>
                <geometry>
                    <sphere radius="${wheel_radius}" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="${wheel_radius}" />
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>1.0</mu>   
                            <mu2>0.0</mu2> 
                            <fdir1>${fdir1}</fdir1>
                        </ode>
                    </friction>
                </surface>
            </collision>
            <xacro:sphere_inertia mass="${wheel_mass}" radius="${wheel_radius}" />
        </link>
        <joint name="${name}_joint" type="revolute">
            <xacro:insert_block name="origin" />
            <parent link="${parent}"/>
            <child link="${name}_link"/>
            <!-- Joint axis and limits (revolute) -->
            <axis xyz="0 1 0" />
            <limit effort="1000" velocity="100" lower="-1.79769e+308" upper="1.79769e+308" />
            <dynamics damping="0.7"/>
            <!-- Joint axis and limits  -->
        </joint>

    </xacro:macro>

</robot>
